#include &lt;stdio.h&gt;
#include &lt;stdlib.h&gt;
int main()
{
    int a,b,c,t;
    scanf("%d %d %d",&amp;a,&amp;b,&amp;c);
    if(a&lt;b)
    {
        t=a;
        a=b;
        b=t;
    }
    if(a&lt;c)
    {
        t=a;
        a=c;
        c=t;
    }
    if(b&lt;c)
    {
        t=b;
        b=c;
        c=t;
    }
    printf("%d %d %d",a,b,c);
    system("pause");
    return 0;
}
