<div class="highlighter-rouge"><div class="highlight"><pre class="highlight"><code>//C032
#include &lt;stdio.h&gt;
#include &lt;stdlib.h&gt;
int main()
{
    int k,a,b,i,count1,count2;
    for(k=4;k&lt;=100;k=k+2)
    {
        for(a=2;a&lt;=k/2;a++)
        {
            count1=0;
            for(i=2;i&lt;=a-1;i++)
            {
                if(a%i==0)
                {
                    count1++;
                    break;
                }
            }
            if(count1==0)
            {
                b=k-a;
                count2=0;
                for(i=2;i&lt;=b-1;i++)
                {
                    if(b%i==0)
                    {
                        count2++;
                        break;
                    }
                }
                if(count2==0)
                {
                    printf("%d=%d+%d\n",k,a,b);
                    break;
                }
            }
        }
    } 
    system("pause");
    return 0;
}
